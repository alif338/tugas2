#include <iostream>

using namespace std;

int main(){
	
	int a;
	cout << "First numbers : ";
	cin >> a;
	
	int b;
	cout << "Second numbers : ";
	cin >> b;
	
	int p = 1;
	while(p) {
		
		int m;
		cout << "Insert string : ";
		cin >> m;
		
		if(m == 1){
			cout << a + b;
			p--;
		}
		
		else if(m == 2){
			cout << a-b;
			p--;
		}
		
		else if(m == 3) {
			cout << a*b;
			p--;
		}
		
		else if (m == 4) {
			cout << a/b;
			p--;
		}
	}
	

return 0;
}
